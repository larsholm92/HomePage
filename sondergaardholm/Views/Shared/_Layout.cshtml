<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Julie og Lars' hjemmeside</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css" integrity="sha384-MCw98/SFnGE8fJT3GXwEOngsV7Zt27NXFoaoApmYm81iuXoPkFOJwJ8ERdknLPMO" crossorigin="anonymous">
    <link href="../../Content/Site.css" rel="stylesheet" />
    
    <link rel="stylesheet" href=""/>
</head>
    
<body>
<div id="siteWrapper" class="container-fluid">
    <div class="row">
        <div class="col-md-2 hidden-sm" id="leftSiteColoumn"></div>
        <div class="col-md-8">
            <div id="MainWrapper" class="container-fluid">
                <div id="topBlock" class="row">
                    <div class="col-md-12">
                        <img src="../../Images/wedding.jpg" id="weddingpic"/>
                    </div>
                </div>

                <div class="row">
                    <div id="leftDiv" class="col-md-3">
                        <div class="icon-bar">
                            @Html.ActionLink("Hjem", "Index", "Home", new {area = ""}, new {id = "homeButton"})
                            @Html.ActionLink("Rengøring", "CleaningScheme", "Home", new {area = ""}, new {id = "cleaningButton"})

                        </div>
                    </div>
                    <div id="container" class="col-md-9">
                        @RenderBody()
                    </div>

                </div>
                <div class="row">
                    <div class="col-md-6">
                        <p>&copy; @DateTime.Now</p>
                    </div>
                    <div class="col-md-6">
                        <p>Julie og Lars Holm</p>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-2" id="rightSiteColoumn"></div>
    </div>
</div>
@Scripts.Render("~/bundles/jquery")
@Scripts.Render("~/bundles/bootstrap")
@RenderSection("scripts", required: false)
</body>
</html>

